{
  "name": "rally-alt",
  "private": true,
  "dependencies": {
    "@types/lodash": "^4.14.154",
    "@types/luxon": "^1.24.0",
    "@types/underscore": "^1.10.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "javascript-time-ago": "^2.0.7",
    "lodash": "^4.17.15",
    "luxon": "^1.24.1",
    "modernizr": "3.11.2",
    "rally": "^2.1.3",
    "request": "^2.88.2",
    "underscore": "^1.10.2",
    "vue": "^2.6.11",
    "vue-class-component": "^7.2.3",
    "vue-froala-wysiwyg": "^3.1.1-1",
    "vue-hot-reload-api": "^2.3.4",
    "vue-material": "^1.0.0-beta-13",
    "vue-picture-input": "^2.1.6",
    "vue-property-decorator": "^8.4.2",
    "vue-resource": "^1.5.1",
    "vue-router": "^3.2.0",
    "vue-toast-notification": "^0.4.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "@vue/component-compiler-utils": "^3.1.2",
    "@vue/eslint-config-typescript": "^5.0.2",
    "eslint": "^7.0.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-vue": "^6.2.2",
    "npm-check-updates": "^6.0.1",
    "parcel-bundler": "^1.12.4",
    "sass": "^1.26.5",
    "typescript": "^3.9.3",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/typescript/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "@typescript-eslint/ban-ts-ignore": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/no-non-null-assertion": "off"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "scripts": {
    "postinstall": "npx modernizr -c ./conf/modernizr-conf.json -d ./node_modules/modernizr",
    "watch": "npx parcel watch templates/index_template.html --public-url / --out-file index.html --cache-dir /tmp/rally2-cache",
    "build": "npx parcel build templates/index_template.html --public-url / --out-file index.html --no-cache --no-source-maps",
    "test": "npx tsc --noEmit",
    "lint": "eslint 'assets/**/*.ts'",
    "clean": "rm -rf ./dist"
  }
}
