{
  "name": "ralliotta",
  "private": false,
  "description": "Ralliotta - the friendly UI for Rally",
  "repository": "https://github.com/mcordes/ralliotta",
  "license": "GPLv3",
  "dependencies": {
    "@types/javascript-time-ago": "^2.0.1",
    "@types/lodash": "^4.14.159",
    "@types/luxon": "^1.24.3",
    "@types/underscore": "^1.10.21",
    "@types/uuid": "^8.3.0",
    "javascript-time-ago": "^2.0.13",
    "jodit": "3.4.23",
    "jodit-vue": "^2.2.1",
    "lodash": "^4.17.20",
    "luxon": "^1.24.1",
    "modernizr": "3.11.3",
    "rally": "^2.1.3",
    "request": "^2.88.2",
    "underscore": "^1.10.2",
    "uuid": "^8.3.0",
    "vue": "^2.6.11",
    "vue-class-component": "^7.2.5",
    "vue-hot-reload-api": "^2.3.4",
    "vue-material": "^1.0.0-beta-15",
    "vue-picture-input": "^2.1.6",
    "vue-property-decorator": "^9.0.0",
    "vue-resource": "^1.5.1",
    "vue-router": "^3.4.3",
    "vue-toast-notification": "^0.5.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "@vue/component-compiler-utils": "^3.2.0",
    "@vue/eslint-config-typescript": "^5.0.2",
    "cors": "^2.8.5",
    "eslint": "^7.7.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-vue": "^6.2.2",
    "express": "^4.17.1",
    "nodemon": "^2.0.4",
    "npm-check-updates": "^7.1.1",
    "parcel-bundler": "^1.12.4",
    "sass": "^1.26.10",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/typescript/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "@typescript-eslint/ban-ts-ignore": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "no-debugger": "off"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "scripts": {
    "postinstall": "npx modernizr -c ./conf/modernizr-conf.json -d ./node_modules/modernizr",
    "watch": "npx parcel watch templates/index_template.html --public-url / --out-file index.html --cache-dir /tmp/ralliotta-cache",
    "build": "npx parcel build templates/index_template.html --public-url / --out-file index.html --no-cache",
    "test": "npx tsc --noEmit",
    "lint": "eslint 'assets/**/*.ts'",
    "clean": "rm -rf ./dist"
  }
}
